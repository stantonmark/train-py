
# single branch if statement 
if True:
    print("True path execute IF Executed")
    
if False:
    print("False path execute")
    
if True:
    print("True path execute IF ELSE  Executed")

    
# ONE if else statemnet chained together 
else:
    print("Else path in IF ELSE execute")
    
    
